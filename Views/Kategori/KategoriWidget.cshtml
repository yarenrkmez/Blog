
@model IEnumerable<Blogg.Models.Kategori>

<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
    <h3 class="tm-gold-text tm-title" style="color:#D96277">
        Kategoriler
    </h3>
    <nav>
        <ul class="nav">
            @foreach (Blogg.Models.Kategori item in Model)
            {
                <li><a style="color:#505AFC" href="/Kategori/Index/@item.KID" class="tm-text-link">@item.Adi (@item.Makales.Count)</a></li>

            }
        </ul>
    </nav>
</div>